{
    "version": 2,
    "buildCommand": "npm install && npx prisma generate --schema=./workout-planner/server/prisma/schema.prisma && cd workout-planner/client && npm install && npm run build",
    "outputDirectory": "workout-planner/client/dist",
    "installCommand": "npm install",
    "framework": null,
    "functions": {
        "api/**/*.ts": {
            "runtime": "@vercel/node@3",
            "includeFiles": "workout-planner/server/prisma/**/*,lib/**/*"
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/:path*"
        },
        {
            "source": "/((?!api).*)",
            "destination": "/index.html"
        }
    ]
}